<%= form_with model: task do |form| %>
    <div>
        <%= form.label :title %>
        <div>
            <%= form.text_field :title, class: "w-full" %>
        </div>
        <% task.errors.full_messages_for(:title).each do |message| %>
            <div class="field-error"> <%= message %> </div> 
        <% end %>
    </div>
    <br>
    <div>
        <%= form.label :desc, "Description" %> 
        <div>
            <%= form.text_area :desc, class: "w-full" %>
        </div>
        <% task.errors.full_messages_for(:desc).each do |message| %>
            <div class="field-error"> <%= message %> </div> 
        <% end %>
        
        <% task.errors.full_messages_for(:is_done).each do |message| %>
            <div class="field-error"> <%= message %> </div> 
        <% end %>
    </div>
    <% if is_edit %>
    <div>
        <%= form.check_box :is_done %>
        <%= form.label :is_done, "Completed?" %>
    </div>
    <% end %>
    <br>
    <%= form.submit class: "btn-primary"%>
<% end %>